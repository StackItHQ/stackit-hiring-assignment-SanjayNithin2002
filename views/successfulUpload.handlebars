<div class="card mb-3 bg-success" style="max-width: 540px; left:30%; top:30%; width:40%; height: 40%; margin-top:10%;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="https://cdn.icon-icons.com/icons2/2248/PNG/512/file_upload_icon_136628.png" class="card-img" alt="Login">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">CSV Importer</h5>
                <p class="card-text">You have successfully uploaded the file!</p>
                <p class="card-text" id="redirect"><small>Redirecting in 5 seconds...</small></p>
            </div>
        </div>
    </div>
</div>
<script>
    var seconds = 5;
    const p = document.getElementById('redirect');
    setInterval(() => {
        p.innerHTML= `<small>Redirecting in ${seconds} seconds...</small>`;
        seconds--;
        if (seconds === 0) {
            window.location.href = "{{redirect}}";
        }
    }, 1000);
</script>